{
  "hooks": {
    "BeforeTool": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "name": "secret-guard",
            "type": "command",
            "command": "${extensionPath}/dist/hooks/secret-guard.js",
            "description": "Security guard to prevent sensitive data leakage"
          }
        ]
      }
    ]
  }
}